{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "gmrdb",
            "request": "launch",
            "name": "Launch Garry's Mod",
            "program": "${workspaceFolder}/srcds.exe",
            "cwd": "${workspaceFolder}",
            "args": [
                "-console",
                "-game",
                "garrysmod",
                "-ip",
                "localhost",
                "-port",
                "27015",
                "+map",
                "gm_construct",
                "+maxplayers",
                "2"
            ],
            "sourceRoot": "${workspaceFolder}/garrysmod",
            "port": 21111,
            "sourceFileMap": {
                "${workspaceFolder}": "addons/rdb"
            },
            "stopOnEntry": true
        }
    ]
}